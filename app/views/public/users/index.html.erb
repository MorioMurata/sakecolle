<h1>Public::Users#index</h1>
<p>Find me in app/views/public/users/index.html.erb</p>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image(200,200) %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user) do %>
            <%= user.user_name %>
          <% end %>
        </td>
        <td>
          <% if current_user != user %>
            <% if user.followed_by?(current_user) %>
                <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
            <% else %>
                <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
