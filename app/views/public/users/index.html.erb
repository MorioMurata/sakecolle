<h1>Public::Users#index</h1>
<p>Find me in app/views/public/users/index.html.erb</p>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to my_page_path(user) do %>
            <%= image_tag user.get_profile_image(200,200) %>
          <% end %>
        </td>
        <td>
          <%= link_to my_page_path(user) do %>
            <%= user.user_name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
