<%= render 'layouts/header', user: @user, collection: @collection %>
<%= render 'layouts/introduction', user: @user %>
<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <%= render 'layouts/navbar' %>
    </div>
    <%= form_with model: @new_collection do |f| %>
    <div class="col-lg-8 offset-2">
      <h4>画像</h4>
      <%= f.file_field :sake_image, accept: "image/jpg, image/jpeg, image/png" %>
      <h4>銘柄名</h4>
      <%= f.text_field :sake_name, size: "50" %>
      <%= f.submit '投稿' %>
    </div>
    <% end %>
  </div>
</div>