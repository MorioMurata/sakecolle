<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-2 mt-5'>
      <h4 class="d-block mx-auto mb-5", style="background-color: #eee; width:200px; padding-left: 16px;"><b>管理者ログイン</b></h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field text-center mb-3">
          <%= f.label :email, "メールアドレス", class: "mr-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", :size => "40" %>
        </div>
        <div class="field text-center">
          <%= f.label :password, "パスワード　　", class: "mr-3" %>
          <%= f.password_field :password, autocomplete: "current-password", :size => "40" %>
        </div>
        <div class="actions text-center mt-5">
          <%= f.submit "ログイン", class: "btn btn-primary px-5", style:"font-weight:bold;" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>